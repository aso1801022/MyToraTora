<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result_Activity">

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="144dp"
        android:layout_height="72dp"
        android:text="@string/lose"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mytoraImage"
        android:layout_width="@dimen/mytoraimage_width"
        android:layout_height="@dimen/mytoraImage_hight"
        android:layout_marginBottom="72dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/resultLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sport_walking_oldwoman" />

    <ImageView
        android:id="@+id/micoImage"
        android:layout_width="@dimen/micoImage_width"
        android:layout_height="@dimen/micoImage_higet"
        android:layout_marginTop="92dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultLabel"
        app:srcCompat="@drawable/nigaoe_katoukiyomasa" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/buck_text" />

    <ImageView
        android:id="@+id/mico"
        android:layout_width="@dimen/mico_width"
        android:layout_height="@dimen/mico_hight"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/maikosan" />
</androidx.constraintlayout.widget.ConstraintLayout>