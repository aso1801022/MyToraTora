<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/oba"
        android:layout_width="@dimen/oba_hight"
        android:layout_height="@dimen/oba_width2"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/kato"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/kato"
        app:srcCompat="@drawable/sport_walking_oldwoman" />

    <ImageButton
        android:id="@+id/kato"
        android:layout_width="@dimen/kato_width"
        android:layout_height="@dimen/kato_hight"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/tora"
        app:layout_constraintTop_toTopOf="@+id/tora"
        app:srcCompat="@drawable/nigaoe_katoukiyomasa" />

    <ImageButton
        android:id="@+id/tora"
        android:layout_width="@dimen/tora_width"
        android:layout_height="@dimen/tora_hight"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="256dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/uchidenokoduchi_eto03_tora" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="132dp"
        android:text="@string/toratora_text"
        app:layout_constraintBottom_toTopOf="@+id/kato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>